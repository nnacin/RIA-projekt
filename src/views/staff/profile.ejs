<% include ./header %>
<!--Start Content-->
<div id="content" class="col-xs-12 col-sm-10">
	<form method="POST" action="/staff/profile">
		<input  type="hidden" name="id" value="<%= results[0]._id %>">
		<div class="form-group">
			<input type="radio" name="active" value="true" <%= (results[0].active) ? 'checked' : ''  %> hidden>
			<input type="radio" name="active" value="false" <%= !(results[0].active) ? 'checked' : ''  %> hidden>
		</div>
		<div class="form-group">
			<input type="radio" name="admin" value="true" <%= (results[0].admin) ? 'checked' : ''  %> hidden>
			<input type="radio" name="admin" value="false" <%= !(results[0].admin) ? 'checked' : ''  %> hidden>
		</div>
		<div class="form-group">
			<label>First Name</label>
			<input type="text" name="firstName" value="<%= results[0].firstName %>">
		</div>
		<div class="form-group">
			<label>Last Name</label>
			<input type="text" name="lastName" value="<%= results[0].lastName %>" >
		</div>
		<div class="form-group">
			<label>Email</label>
			<input type="text" name="email" value="<%= results[0].email %>" >
		</div>
		<div class="form-group">
			<input value="<%= results[0].location._id %>" name ="location" hidden />
		</div>
		<button class="btn-primary">Update</button>
	</form>
	<a data-toggle="modal" href="#change-password">Change Password</a>
</div>
<!--End Content-->
<% include ./footer %>

<div class="modal fade" id="change-password" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Change Password</h4>
      </div>
      <div class="modal-body">
        <form method="POST" action="/staff/changePassword">
					<input  type="hidden" name="id" value="<%= locals.user.id %>">
					<div class="form-group">
						<label>Password</label>
						<input class="form-control" type="password" name="password" required>
					</div>
					<div class="form-group">
						<label>Repeat Password</label>
						<input class="form-control" type="password" name="password2" required>
					</div>
					<button class="btn-primary">Change</button>
				</form>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

