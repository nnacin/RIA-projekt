<% include ./header %>
<!--Start Content-->
<div id="content" class="col-xs-12 col-sm-10" style="padding-top: 2em">
	<div class="panel panel-default">
		<div class="panel-heading">Change the employee's details</div>
		<div class="panel-body">
			<form method="POST" action="/staff/employee">
				<input  type="hidden" name="id" value="<%= results[0]._id %>">
				<div class="form-group">
					<label>First Name</label>
					<input class="form-control" type="text" name="firstName" value="<%= results[0].firstName %>" required>
				</div>
				<div class="form-group">
					<label>Last Name</label>
					<input class="form-control" type="text" name="lastName" value="<%= results[0].lastName %>" required>
				</div>
				<div class="form-group">
					<label>Email</label>
					<input class="form-control" type="text" name="email" value="<%= results[0].email %>" required>
				</div>
				<div class="form-group">
					<label>Location</label>
					<select class="form-control" name="location" required>
						<% locations.forEach(function (location) { %>
							<option value="<%= location._id %>" ><%= location.name %></option>
						<% }) %>
					</select>
				</div>
				<div class="form-group">
					<label>Active</label><br>
					<input type="radio" name="active" value="true" <%= (results[0].active) ? 'checked' : ''  %>> True<br>
					<input type="radio" name="active" value="false" <%= !(results[0].active) ? 'checked' : ''  %>> False
				</div>
				<div class="form-group">
					<label>Admin</label><br>
					<input type="radio" name="admin" value="true" <%= (results[0].admin) ? 'checked' : ''  %>> True<br>
					<input type="radio" name="admin" value="false" <%= !(results[0].admin) ? 'checked' : ''  %>> False<br>
				</div>
				<button class="btn btn-primary">Update</button>
			</form>
		</div>
	</div>
</div>
<!--End Content-->
<% include ./footer %>
