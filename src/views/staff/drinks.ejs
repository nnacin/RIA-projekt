<% include ./header %>
<!--Start Content-->
<div id="content" class="col-xs-12 col-sm-10">
	<div class="row">
		<div class="col-md-3">
			<% drinks.forEach(drink => { %>
				<div class="row">
		    	<div class="item-title">
		    		<div class="col-md-6">
		    			<a href="/staff/drink?id=<%= drink._id %>"><%= drink.name %></a>
		    		</div>
		    		<div class="col-md-4 col-md-offset-2">
		    			<a class="btn btn-danger" href="/staff/deletedrink?id=<%= drink._id %>">Delete</a>
		    		</div>
					</div>
				</div>
		  <% }) %>
	  </div>
	  <div class="col-md-9">
  		<form method="POST" action="/staff/drink">
				<div class="form-group">
					<label>Name</label>
					<input class="form-control" type="text" name="name" required>
				</div>
				<div class="form-group">
					<label>Price</label>
					<input class="form-control" type="number" name="price" placeholder="Price must be a number." required>
				</div>
				<div class="form-group">
					<label>Quantity</label>
					<input class="form-control" type="text" name="quantity" placeholder="Quantity must be a number." required>
				</div>
				<button class="btn btn-primary">Save</button>
			</form>
	  </div>
  </div>
</div>
<!--End Content-->
<% include ./footer %>
