<% include ./header %>
<!--Start Content-->
<div id="content" class="col-xs-12 col-sm-10">
	<a class="btn btn-success" data-toggle="modal" data-target="#add-pizza">Add new</a>
	<% pizza.forEach(pizza => { %>
    	<div class="item-title">
    		<a href="/staff/pizza?id=<%= pizza._id %>"><%= pizza.name %></a> 
    		<a class="btn btn-danger" href="/staff/deletepizza?id=<%= pizza._id %>">Delete</a>
		</div>
  	<% }) %>

</div>
<!--End Content-->
<% include ./footer %>

<div class="modal fade" id="add-pizza" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Create pizza</h4>
      </div>
      <div class="modal-body">
        <form method="POST" action="/staff/pizza">
					<div class="form-group">
						<label>Name</label>
						<input  class="form-control" type="text" name="name" required>
					</div>
					<div class="form-group">
						<label>Price</label>
						<input  class="form-control" type="number" name="price" required>
					</div>
					<div class="form-group">
						<label>Ingridients</label>
						<input  class="form-control" type="text" name="ingredients" required>
					</div>
					<button class="btn-primary">Save</button>
				</form>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
