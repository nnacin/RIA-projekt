<% include ./header %>
<!--Start Content-->
<div id="content" class="col-xs-12 col-sm-10" style="padding-top: 2em">
	<div class="row">
		<div class="col-md-3 col-sm-3">
			<div class="panel panel-default">
			  <div class="panel-heading">Change an employee</div>
					<ul class="list-group">
						<% employees.forEach(employee => { %>
							<% if (employee.username != "admin") { %>
								<% var icon = 'glyphicon glyphicon-user'; %>
								<% if (employee.admin) { icon = 'glyphicon glyphicon-wrench' }%>
								<% if (!employee.active) { icon = 'glyphicon glyphicon-remove' }%>
										<a class="list-group-item" href="/staff/employee?id=<%= employee._id %>"><i class="<%= icon %>"></i><%= ' ' + employee.username %></a>
							<% } %>
					  <% }) %>
					</ul>
			</div>
	  </div>
	  <div class="col-md-9 col-sm-9">
			<div class="panel panel-default">
  			<div class="panel-heading">Add an employee</div>
				<div class="panel-body">
		  		<form method="POST" action="/staff/employee">
							<div class="form-group">
								<label>First Name</label>
								<input class="form-control" type="text" name="firstName" required>
							</div>
							<div class="form-group">
								<label>Last Name</label>
								<input class="form-control" type="text" name="lastName" required>
							</div>
							<div class="form-group">
								<label>Userame</label>
								<input class="form-control" type="text" name="username" placeholder="Username must be at least 6 characters long and unique." required>
							</div>
							<div class="form-group">
								<label>Email</label>
								<input class="form-control" type="email" name="email" required>
							</div>
							<div class="form-group">
								<label>Location</label>
								<select class="form-control" name="location" required>
									<% locations.forEach(function (location) { %>
										<option value="<%= location._id %>" ><%= location.name %></option>
									<% }) %>
								</select>
							</div>
							<button class="btn btn-primary">Save</button>
						</form>
				</div>
			</div>
	  </div>
  </div>
</div>
<!--End Content-->
<% include ./footer %>
