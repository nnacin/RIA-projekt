<% include ./header %>
<!--Start Content-->
<div id="content" class="col-xs-12 col-sm-10">
	<h4>Upcoming Orders</h4><br>
	<% orders.forEach(order => { %>
    	<% if (((user.location && order.location._id == user.location._id) || !user.location) && (order.dateFinished > today)) { %>
        	<div class="item-title">
        		<a href="/staff/order?id=<%= order._id %>"><%= order._id %></a> - <%= order.dateFinished %>
    		</div>
    	<% } %>
  	<% }) %>
  	<br>
  	<h4>Past Orders</h4>
	<% orders.forEach(order => { %>
		<% if (((user.location && order.location._id == user.location._id) || !user.location) && (order.dateFinished < today)) { %>
			<div class="item-title">
				<a href="/staff/order?id=<%= order._id %>"><%= order._id %></a> 
			</div>
		<% } %>
  	<% }) %>
</div>
<!--End Content-->
<% include ./footer %>
