<% include ./header %>

<!--Start Content-->
<div id="content" class="col-xs-12 col-sm-10" style="padding-top: 2em">
	<div class="panel panel-default">
		<div class="panel-heading">Change the drink's details</div>
		<div class="panel-body">
			<form method="POST" action="/staff/drink">
				<input  type="hidden" name="id" value="<%= results[0]._id %>">
				<div class="form-group">
					<label>Name</label>
					<input class="form-control" type="text" name="name" value="<%= results[0].name %>" required>
				</div>
				<div class="form-group">
					<label>Price</label>
					<input class="form-control" type="number" name="price" value="<%= results[0].price %>" placeholder="Price must be a number." required>
				</div>
				<div class="form-group">
					<label>Quantity</label>
					<input class="form-control" type="text" name="quantity" value="<%= results[0].quantity %>" placeholder="Quantity must be a number." required>
				</div>
				<button class="btn btn-primary">Update</button>
			</form>
		</div>
	</div>
</div>
<!--End Content-->

<% include ./footer %>
