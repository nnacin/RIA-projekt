<% include ./header %>

<!--Start Content-->
<div id="content" class="col-xs-12 col-sm-10">
	<form method="POST" action="/staff/drink">
		<input  type="hidden" name="id" value="<%= results[0]._id %>">
		<div class="form-group">
			<label>Name</label>
			<input class="form-control" type="text" name="name" value="<%= results[0].name %>" required>
		</div>
		<div class="form-group">
			<label>Price</label>
			<input class="form-control" type="number" name="price" value="<%= results[0].price %>" required>
		</div>
		<div class="form-group">
			<label>Quantity</label>
			<input class="form-control" type="text" name="quantity" value="<%= results[0].quantity %>" required>
		</div>
		<button class="btn-primary">Update</button>
	</form>
</div>
<!--End Content-->

<% include ./footer %>
