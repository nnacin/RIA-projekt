<% include ./header %>
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<form method="POST" action="/changePassword">
				<input  type="hidden" name="id" value="<%= locals.user.id %>">
				<div class="form-group">
					<label>Password</label>
					<input class="form-control" type="password" name="password" placeholder="Password must be at least 6 characters long.">
				</div>
				<div class="form-group">
					<label>Repeat Password</label>
					<input class="form-control" type="password" name="password2">
				</div>
				<button class="btn btn-default">Change</button>
			</form>
			<br>
		</div>
	</div>
</div>

<% include ./footer %>